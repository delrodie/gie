{% extends 'base.html.twig' %}
{% block title %}
   Enregistrement des Ues
{% endblock %}

{% block body %}
    <div class="pageheader">
        <h3><i class="fa fa-home"></i>  Gestion des Ues</h3>
        <div class="breadcrumb-wrapper">
            <span class="label"></span>
            <ol class="breadcrumb">
                <li><a href="#">Accueil</a></li>
                <li><a href="#">Parametrage LMD</a></li>
                <li class="active">Ue</li>
            </ol>
        </div>
    </div>

    <div id="page-content">


        <div class="row">

            <div class="col-sm-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Enregistrement des Ues</h3>
                    </div>
                    {{ form_start(form, { 'attr': {'class': 'form-vertical', 'id': 'statutForm' }}) }}
                    <div class="panel-body">
                      <div class="row">
                          <div class="col-xs-10 col-xs-offset-1">
                              <div class="form-group">
                                  <div class="row">
                                      <label class="col-sm-2 text-right control-label">Libellé Mention</label>
                                        <div class="col-sm-9">
                                          {{ form_widget(form.mention) }}
                                          {{ form_errors(form.mention) }}
                                        </div>
                                  </div>
                              </div>
                          </div>
                      </div>

                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="form-group">
                                    <div class="row">
                                      <div class="col-sm-6">
                                      <div class="row">
                                        <label class="col-sm-4 text-right control-label">Semestre</label>
                                          <div class="col-sm-8">
                                            {{ form_widget(form.semestre) }}
                                            {{ form_errors(form.semestre) }}

                                          </div>
                                      </div>
                                      </div>
                                      <div class="col-sm-6">
                                        <div class="row">
                                          <label class="col-sm-2 text-right control-label">Type</label>
                                            <div class="col-sm-8">
                                              {{ form_widget(form.typeue) }}
                                              {{ form_errors(form.typeue) }}

                                            </div>
                                        </div>
                                      </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="form-group">
                                    <div class="row">
                                      <div class="col-sm-6">
                                        <div class="row">
                                          <label class="col-sm-4 text-right control-label">Libellé Ue</label>
                                            <div class="col-sm-8">
                                              {{ form_widget(form.libue) }}
                                              {{ form_errors(form.libue) }}

                                            </div>
                                        </div>
                                      </div>
                                        <div class="col-sm-6">
                                          <div class="row">
                                            <label class="col-sm-2 text-right control-label">Code Ue</label>
                                              <div class="col-sm-8">
                                                {{ form_widget(form.abrevue) }}
                                                {{ form_errors(form.abrevue) }}
                                              </div>
                                          </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="form-group">
                                    <div class="row">

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="panel-footer">
                        <div class="row">
                            <div class="col-sm-7 col-sm-offset-3 text-right">
                                <button class="btn btn-default" type="reset">Annuler</button>
                                <button class="btn btn-primary" type="submit">Enregistrer</button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form)}}
                    <div class="row">
                      <div class="col-sm-12" style="margin-top:30px">

                      </div>
                    </div>

                    <table class="table table-striped" id="demo-dt-basic" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-left">Mention</th>
                            <th class="text-left">Semestre</th>
                            <th class="text-left">Libellé Ue</th>
                            <th class="text-left">Code Ue</th>
                            <th class="text-left">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ue in ues %}
                            <tr>
                                <td class="text-center">{{ loop.index }}</td>
                                <td>{{ ue.mention.abrevmention }}</td>
                                <td>{{ ue.semestre }}</td>
                                <td>{{ ue.libue }}</td>
                                <td>{{ ue.abrevue}}</td>
                                  <td><a href="{{ path('ue_edit', {'id': ue.id, 'ecole': ecole })}}" title="Modifier Ue"><i class="fa fa-edit"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('ressources/plugins/bootstrap-validator/bootstrapValidator.min.css')}}" rel="stylesheet">
    <link href="{{ asset('ressources/plugins/dropzone/dropzone.css')}}" rel="stylesheet">
    <link href="{{ asset('ressources/plugins/datatables/media/css/dataTables.bootstrap.css')}}" rel="stylesheet">
    <link href="{{ asset('ressources/plugins/datatables/extensions/Responsive/css/dataTables.responsive.css')}}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('ressources/plugins/bootstrap-validator/bootstrapValidator.min.js')}}"></script>
    <script src="{{ asset('ressources/js/sygesca-form-validation.js')}}"></script>
    <script src="{{ asset('ressources/plugins/datatables/media/js/jquery.dataTables.js')}}"></script>
    <script src="{{ asset('ressources/plugins/datatables/media/js/dataTables.bootstrap.js')}}"></script>
    <script src="{{ asset('ressources/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js')}}"></script>
    <script src="{{ asset('ressources/js/demo/tables-datatables.js')}}"></script>
{% endblock %}
